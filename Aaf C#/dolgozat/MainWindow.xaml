<Window x:Class="dolgozat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dolgozat"
        mc:Ignorable="d"
        Title="Dolgozat" Height="529" Width="402">
    <Grid>
        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="Első">
                <Grid Background="#FF00E0E5">
                    <Label Content="Adatok" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="60" Width="165" FontFamily="Bauhaus 93" FontSize="48"/>
                    <Label Content="Méret" HorizontalAlignment="Left" Margin="20,99,0,0" VerticalAlignment="Top"/>
                    <Slider HorizontalAlignment="Left" Margin="98,104,0,0" VerticalAlignment="Top" Width="238" Height="41" FontSize="22" RenderTransformOrigin="0.5,0.5" TickPlacement="Both" Value="6">
                        <Slider.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Slider.RenderTransform>
                    </Slider>
                    <ComboBox HorizontalAlignment="Left" Margin="142,196,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5">
                        <ComboBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="20"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ComboBox.RenderTransform>
                        <ComboBoxItem Content="Nagyatád"/>
                        <ComboBoxItem Content="Háromfa" IsSelected="True" />
                        <ComboBoxItem Content="Csurgó"/>
                    </ComboBox>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="242,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="20"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="244,177,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" IsChecked="True">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="20"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="248,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" IsChecked="True">
                        <CheckBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="20"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </CheckBox.RenderTransform>
                    </CheckBox>
                    <RadioButton Content="hús" HorizontalAlignment="Left" Margin="41,175,0,0" VerticalAlignment="Top" Height="16" Width="88"/>
                    <RadioButton Content="gyümölcs" HorizontalAlignment="Left" Margin="41,191,0,0" VerticalAlignment="Top" Height="16" Width="88"/>
                    <RadioButton Content="zöldség" HorizontalAlignment="Left" Margin="41,207,0,0" VerticalAlignment="Top" Height="16" Width="88"/>
                    <RadioButton Content="egyéb" HorizontalAlignment="Left" Margin="41,224,0,0" VerticalAlignment="Top" Height="16" Width="88"/>
                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="113" Margin="7,145,0,0" VerticalAlignment="Top" Width="113">
                        <Label Content="Válassz!"/>
                    </Border>
                    <TextBox HorizontalAlignment="Center" Margin="0,280,0,0" TextWrapping="Wrap" Text="Megjegyzés" VerticalAlignment="Top" Width="352" Height="95"/>
                    <CheckBox Content="" HorizontalAlignment="Left" Margin="181,400,0,0" VerticalAlignment="Top"/>
                    <Label Content="Elolvastam a szabályokat:" HorizontalAlignment="Left" Margin="38,395,0,0" VerticalAlignment="Top"/>
                    <Button Content="Mehet!" HorizontalAlignment="Left" Margin="248,388,0,0" VerticalAlignment="Top" Height="63" Width="116" FontSize="22" Background="#FF0050FF" Foreground="White"/>
                </Grid>
            </TabItem>
            <TabItem Header="Második">
                <Grid Background="#FFE5E500">
                    <TextBox HorizontalAlignment="Left" Margin="69,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Height="18"/>
                    <Image HorizontalAlignment="Left" Height="159" Margin="212,21,0,0" VerticalAlignment="Top" Width="150" Source="/apples-poland-red-jonaprince-1-e1643214217535.jpg"/>
                    <Label Content="Név:" HorizontalAlignment="Left" Margin="16,30,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox HorizontalAlignment="Left" Margin="69,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117"/>
                    <Label Content="Címke:" HorizontalAlignment="Left" Margin="16,74,0,0" VerticalAlignment="Top" FontSize="14" Height="27"/>
                    <Button Content="Felvétel" HorizontalAlignment="Left" Margin="18,130,0,0" VerticalAlignment="Top" Height="50" Width="168" Background="#FFB7A951" FontSize="14"/>
                    <Label Content="Eddigiek:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                    <ListBox Margin="10,256,21,26">
                        <ComboBoxItem Content="körte" FontSize="14"/>
                        <ComboBoxItem Content="barack" FontSize="14"/>
                        <ComboBoxItem Content="cseresznye" IsSelected="True" FontSize="14"/>
                    </ListBox>
                </Grid>

            </TabItem>
        </TabControl>


    </Grid>
</Window>
